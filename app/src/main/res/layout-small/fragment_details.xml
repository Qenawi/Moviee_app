<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1a00"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#878b87">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.qenawi.lg_test.Detail_ActivityFragment"
            tools:showIn="@layout/activity_detail_">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_weight="2"
                    android:id="@+id/deatail_imge_idx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/fav_on" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RELESE DATE : "
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12/4/2015" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CATEGORY :"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/CATEGORY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ACTION" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VOTS :"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/VOTS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25K" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NAME :"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/NAME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ATTACK ON TITAN" />

                    <Button
                        android:id="@+id/favourt_buttn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/fav_on"
                        android:text="add"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#ff0011"
                        android:textSize="7sp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="290dp"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="#e69e10">

            </FrameLayout>

            <TextView
                android:id="@+id/DESCRIPTIONxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overView"
                android:textSize="17sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#d9d326"></FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trailers"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#c20b0b"></ListView>

                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#d9d326"></FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/list2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#c20b0b"></ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!-- -->
</LinearLayout>