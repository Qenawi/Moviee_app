<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#121312"
    android:layout_height="match_parent">
    <ImageView
        android:layout_weight="1"
        android:layout_margin="1dp"
        android:id="@+id/favourit_icon"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:src="@drawable/fav_on"
        />
    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
<TextView
    android:layout_margin="5dp"
    android:id="@+id/favourit_Promo"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Promo1 WAtch (ATTack on Titan)"
    android:textColor="#f2e6e2"
    android:maxLines="2"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/favourt_buttn_remoove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            />
        <Button
            android:id="@+id/favourt_buttn_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
